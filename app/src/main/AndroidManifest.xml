<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dparker.apps.checkvalve"
    android:installLocation="auto"
    android:versionCode="26"
    android:versionName="2.0.10" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/checkvalveTheme" >
        <activity
            android:name=".CheckValve"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddServerActivity"
            class="AddServerActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:theme="@style/checkvalveTheme_Dialog" />
        <activity
            android:name=".ManageServersActivity"
            class="ManageServersActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        <activity
            android:name=".EditServerActivity"
            class="EditServerActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:theme="@style/checkvalveTheme_Dialog" />
        <activity
            android:name=".ShowPlayersActivity"
            class="ShowPlayersActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:theme="@style/checkvalveTheme_Dialog" />
        <activity
            android:name=".PlayerSearchActivity"
            class="PlayerSearchActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:theme="@style/checkvalveTheme_Dialog" />
        <activity
            android:name=".SearchPlayersActivity"
            class="SearchPlayersActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        <activity
            android:name=".RconActivity"
            class="RconActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        <activity
            android:name=".RconPasswordActivity"
            class="RconPasswordActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:theme="@style/checkvalveTheme_Dialog" />
        <activity
            android:name=".AboutActivity"
            class="AboutActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:theme="@style/checkvalveTheme_Dialog" />
        <activity
            android:name=".ChatViewerActivity"
            class="ChatActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        <activity
            android:name=".ChatRelayDetailsActivity"
            class="ChatRelayDetailsActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:theme="@style/checkvalveTheme_Dialog" />
        <activity
            android:name=".SettingsActivity"
            class="SettingsActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        <activity
            android:name=".ShowNoteActivity"
            class="ShowNoteActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:theme="@style/checkvalveTheme_Dialog" />
        <activity
            android:name=".DebugConsoleActivity"
            class="DebugConsoleActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        <activity
            android:name=".CreateBackupActivity"
            class="CreateBackupActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        <activity
            android:name=".RestoreBackupActivity"
            class="RestoreBackupActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        <activity
            android:name=".backup.FileChooserActivity"
            class="FileChooserActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />
        
        <receiver android:name=".BootCompletedReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".BackgroundQueryService"
            android:exported="false" />

        <service
            android:name=".BackgroundJobService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>